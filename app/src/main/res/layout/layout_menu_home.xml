<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_menu_home">

    <LinearLayout
        android:id="@+id/btn_scan_nutrition"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rounded">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@string/text_btn_scan"
            android:src="@drawable/ic_scan_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_scan"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_monitoring"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rounded">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@string/text_btn_monitor"
            android:src="@drawable/ic_monitoring"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_monitor"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_baby_data"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_rounded">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@string/text_btn_baby"
            android:src="@drawable/ic_baby"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/text_btn_baby"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>